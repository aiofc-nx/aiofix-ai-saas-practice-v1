{
  "name": "@aiofix/api-fastify-server",
  "version": "1.0.0",
  "description": "Fastify API服务器 - 基于@aiofix/core模块的企业级API服务",
  "main": "./src/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "start:dev": "ts-node src/app.ts",
    "start:debug": "ts-node --inspect src/app.ts",
    "start:prod": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fastify",
    "api-server",
    "nestjs",
    "enterprise",
    "multi-tenant",
    "cqrs",
    "event-driven"
  ],
  "author": "Aiofix Team",
  "license": "MIT",
  "dependencies": {
    "@aiofix/cache": "workspace:*",
    "@aiofix/config": "workspace:*",
    "@aiofix/core": "workspace:*",
    "@aiofix/logging": "workspace:*",
    "@aiofix/messaging": "workspace:*",
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^7.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^5.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.9.2"
  }
}